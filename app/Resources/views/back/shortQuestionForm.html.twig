<div class="formBoxBack">
    {% if question.id is null %}<div id="newQuestionTitle" class="titleBoxBack {% if newSaved is defined %}questionName{% endif %}" align="center">Question n°{{ nbQuestion }}</div>{% endif %}
    {{ form_start(form) }}
    <div class="validSuccess hidden">
        Changements sauvegardés
    </div>
    <div class="input">{{ form_label(form.description) }}<br>{{ form_widget(form.description) }}</div>
    {% if question.imgPath is not null %}<div><img src="{{ asset(question.getWebPath) }}"></div>{% endif %}
    <div class="input">{{ form_label(form.imgPath) }}<br>{{ form_widget(form.imgPath) }}</div>
    <div class="input">{{ form_label(form.videoPath) }}<br>{{ form_widget(form.videoPath) }}</div>
    <div class="input">{{ form_widget(form.quizz) }}</div>
    <div class="spaceBar"></div>
    <div class="input">{{ form_label(form.response1) }}<br>{{ form_widget(form.response1) }}<br>
        {{ form_label(form.correct1) }}{{ form_widget(form.correct1) }}</div>
    <div class="input">{{ form_label(form.response2) }}<br>{{ form_widget(form.response2) }}<br>
        {{ form_label(form.correct2) }}{{ form_widget(form.correct2) }}</div>
    <div class="input">{{ form_label(form.response3) }}<br>{{ form_widget(form.response3) }}<br>
        {{ form_label(form.correct3) }}{{ form_widget(form.correct3) }}</div>
    <div class="input">{{ form_label(form.response4) }}<br>{{ form_widget(form.response4) }}<br>
        {{ form_label(form.correct4) }}{{ form_widget(form.correct4) }}</div>
    <div class="input"><br>{{ form_widget(form.Valider) }}</div>
    <input type="hidden" value="1" name="ajax">
    <input type="hidden" value="{{ nbQuestion }}" id="nbQuestion">
    {{ form_end(form) }}
</div>
